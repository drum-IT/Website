<% include ../partials/header %>
<section class="showcase showcase--single">
	<div class="form__container">
		<form class="form" action="/replies/<%= postId %>" method="POST">
			<h1 class="form__title">New Reply</h1>
			<div class="form__group form__group--input">
				<div class="form__input form__input--large form__input--bottom">
					<i class="fas fa-chevron-right input__icon"></i>
					<textarea autocapitalize="off" spellcheck="false" class="text__input--large" name="reply[content]" autocomplete="false"></textarea>
				</div>
			</div>
			<input class="form__submit" type="submit" value="Post">
		</form>
		<p class="form__links">
			<a class="form__link form__link--two" href="/posts/<%= postId %>">Go Back</a>
		</p>
	</div>
</section>
<% include ../partials/footer %>