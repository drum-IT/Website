<% include ../partials/header %>
<section class="showcase showcase--single">
	<div class="form__container">
		<form class="auth__form" action="/posts/<%= forumId %>" method="POST">
			<h1 class="auth__form--title">New Post</h1>
			<div class="form__group form__group--input">
				<div class="form__input form__input--top">
					<i class="fas fa-chevron-right input__icon"></i>
					<input class="text__input" name="post[title]" placeholder="Post Name" type="text" autofocus>
				</div>
				<div class="form__input form__input--large form__input--bottom">
					<i class="fas fa-chevron-right input__icon"></i>
					<textarea class="text__input--large" name="post[content]" autocomplete="false"></textarea>
				</div>
			</div>
			<input class="form__submit" type="submit" value="Create">
		</form>
		<p class="auth__form--links">
			<a class="auth__form__link auth__form__link--two" href="/forums">Go Back</a>
		</p>
	</div>
</section>
<% include ../partials/footer %>