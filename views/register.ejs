<% include ./partials/header %>
<section class="showcase">
  <div class="form__container">
    <form class="form" action="/register" method="POST">
      <h1 class="form__title">Sign Up</h1>
      <div class="form__group form__group--input">
        <div class="form__input">
          <i class="fas fa-user input__icon"></i>
          <input class="text__input" name="username" placeholder="username" type="text" autofocus autocapitalize="off" spellcheck="false" maxlength="20">
				</div>
				<div class="form__input">
          <i class="fas fa-user input__icon"></i>
          <input class="text__input" name="firstName" placeholder="first name" type="text" autofocus>
				</div>
				<div class="form__input">
          <i class="fas fa-user input__icon"></i>
          <input class="text__input" name="lastName" placeholder="last name" type="text" autofocus>
        </div>
        <div class="form__input">
          <i class="fas fa-envelope input__icon"></i>
          <input class="text__input" name="email" placeholder="email" type="email">
        </div>
        <div class="form__input">
          <i class="fas fa-key input__icon"></i>
          <input class="text__input" name="password" placeholder="password" type="password" minlength="8">
        </div>
        <div class="form__input form__input--bottom">
          <i class="fas fa-key input__icon"></i>
          <input class="text__input" name="adminCode" placeholder="optional code" type="text" autocapitalize="off" spellcheck="false">
        </div>
      </div>
      <input class="form__submit" type="submit" value="Sign Up">
    </form>
    <p class="form__links">
      <a class="form__link form__link--one" href="/">Go Back</a>
      <a class="form__link form__link--two" href="/login">Sign In</a>
      <a class="form__link form__link--three" href="/forgot">Forgot Password</a>
    </p>
  </div>
</section>
<% include ./partials/footer %>