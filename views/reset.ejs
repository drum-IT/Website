<% include ./partials/header %>
<section class="showcase">
  <div class="form__container">
    <form class="form" action="/reset/<%= token %>" method="POST">
      <h1 class="form__title">Reset Password</h1>
      <div class="form__group form__group--input">
        <div class="form__input form__input--top">
          <i class="fas fa-key input__icon"></i>
          <input class="text__input text__input--small" type="password" id="password" name="password" placeholder="new password" autofocus>
        </div>
        <div class="form__input form__input--bottom">
          <i class="fas fa-key input__icon"></i>
          <input class="text__input" type="password" id="confirm" name="confirm" placeholder="confirm password">
        </div>
      </div>
      <input class="form__submit" type="submit" value="Reset Password">
    </form>
    <p class="form__links">
      <a class="form__link form__link--one" href="/login">Sign In</a>
      <a class="form__link form__link--three" href="/register">Sign Up</a>
    </p>
  </div>
</section>
<% include ./partials/footer %>